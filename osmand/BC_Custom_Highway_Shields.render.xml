<?xml version="1.0" encoding="UTF-8"?>
<renderingStyle name="BC Custom Highway Shields" depends="default" defaultColor="#ebe7e4" version="1">
    <!--
      OSMAnd style overlay for British Columbia (BC) route shields.
      Notes:
      - External user styles can reliably reference built-in textShield assets.
      - This style therefore uses closest built-in shield shapes/colors,
        while optional real-life SVG source artwork is included in /osmand/custom_shields.

      Route metadata used by OSMAnd's route relation index:
      - route_road_#SEQ_network=ca:bc
      - route_road_#SEQ_network=ca:transcanada
      - route_road_#SEQ_network=ca:yellowhead
    -->

    <renderingConstant name="bcShieldOrder" value="129"/>

    <text>
        <switch>
            <switch seq="1:10">
                <case minzoom="7" tag="highway" value="motorway" nameTag="route_road_#SEQ_ref"/>
                <case minzoom="12" tag="highway" value="motorway_link" nameTag="route_road_#SEQ_ref"/>
                <case minzoom="7" tag="highway" value="trunk" nameTag="route_road_#SEQ_ref"/>
                <case minzoom="12" tag="highway" value="trunk_link" nameTag="route_road_#SEQ_ref"/>
                <case minzoom="10" tag="highway" value="primary" nameTag="route_road_#SEQ_ref"/>
                <case minzoom="12" tag="highway" value="secondary" nameTag="route_road_#SEQ_ref"/>
                <case minzoom="14" tag="highway" value="tertiary" nameTag="route_road_#SEQ_ref"/>
                <case minzoom="16" tag="highway" value="unclassified" nameTag="route_road_#SEQ_ref"/>
                <case minzoom="16" tag="highway" value="residential" nameTag="route_road_#SEQ_ref"/>

                <apply textMinDistance="120" textWrapWidth="10" textSize="13" textBold="true">
                    <!-- BC provincial routes: blue, BC-like shield -->
                    <case additional="route_road_#SEQ_network=ca:bc" nameTag="route_road_#SEQ_ref" textColor="#FFFFFF" textOrder="$bcShieldOrder">
                        <case textLength="1" textShield="blue_usishield_2_road_shield"/>
                        <case textLength="2" textShield="blue_usishield_2_road_shield"/>
                        <case textLength="3" textShield="blue_usishield_3_road_shield"/>
                        <case textLength="4" textShield="blue_square_4_road_shield"/>
                        <case textLength="5" textShield="blue_square_5_road_shield"/>
                        <case textHaloColor="#003A8C" textHaloRadius="4"/>
                    </case>

                    <!-- Trans-Canada + Yellowhead across BC: green national route style -->
                    <case additional="route_road_#SEQ_network=ca:transcanada" nameTag="route_road_#SEQ_ref" textColor="#FFFFFF" textOrder="$bcShieldOrder">
                        <case textLength="1" textShield="green_cshield_2_road_shield"/>
                        <case textLength="2" textShield="green_cshield_2_road_shield"/>
                        <case textLength="3" textShield="green_cshield_3_road_shield"/>
                        <case textLength="4" textShield="green_square_4_road_shield"/>
                        <case textHaloColor="#1F5B24" textHaloRadius="4"/>
                    </case>
                    <case additional="route_road_#SEQ_network=ca:yellowhead" nameTag="route_road_#SEQ_ref" textColor="#FFFFFF" textOrder="$bcShieldOrder">
                        <case textLength="1" textShield="green_cshield_2_road_shield"/>
                        <case textLength="2" textShield="green_cshield_2_road_shield"/>
                        <case textLength="3" textShield="green_cshield_3_road_shield"/>
                        <case textLength="4" textShield="green_square_4_road_shield"/>
                        <case textHaloColor="#1F5B24" textHaloRadius="4"/>
                    </case>
                </apply>
            </switch>
        </switch>
    </text>
</renderingStyle>
